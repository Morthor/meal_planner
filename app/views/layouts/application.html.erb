<!DOCTYPE html>
<html>
  <head>
    <title>MealPlanner</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container-fluid">
      <div class="row">
        <div class="col-md-0 col-xl-1"></div>
        <div class="col-md-12 col-xl-10">
          <nav class="navbar fixed-top navbar-custom navbar-expand-lg navbar-light bg-light">
              <a class="navbar-brand nav-brand-custom" href="/">Meal Planner</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>
          
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
              <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                  <a class="nav-link <%= 'active' if controller_name == 'home' %>" href="<%= root_path %>">Home</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link <%= 'active' if controller_name == 'recipes' %>" href="<%= recipes_path %>">Recipes</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link <%= 'active' if controller_name == 'ingredients' %>" href="<%= ingredients_path %>">Ingredients</a>
                </li>
                <li class="nav-item logout-link">
                  <%= link_to "Log out", destroy_user_session_path, :method => :delete, class: "nav-link" %>
                </li>
              </ul>
            </div>
          </nav>
          
          <% if notice %>
            <div class="alert alert-warning" role="alert">
              <%= notice %>
            </div>
          <% end %>
          <% if alert %>
          <div class="alert alert-danger" role="alert">
            <%= alert %>
          </div>
          <% end %>
          <% if controller_name != 'home' %>
          <div>
            <ul class="nav nav-custom">
              <li class="nav-item">
                <%= link_to :back, class: "nav-link" do %>
                <i class="fa fa-angle-left fa-lg fa-fw"></i> back to previous page
                <% end %>
              </li>
            </ul>
          </div>
          <% end %>
          <div class="content">
            <%= yield %>
          </div>  
        </div>
        
      </div>
    </div>
  </body>
</html>
