<%= form_with(model: shopping_list, local: true) do |form| %>
  <%= form.hidden_field :year, id: :shopping_list_year %>
  <%= form.hidden_field :week_number, id: :shopping_list_week_number %>

  <% if shopping_list.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(shopping_list.errors.count, "error") %> prohibited this shopping_list from being saved:</h2>

      <ul>
      <% shopping_list.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="shopping-list-items-container form-inline w-100">
    <ul class="list-group w-100">
      <%= render partial:'item_form', locals: {form: form } %>
    </ul>
  </div>


  <div class="btn-group shopping-list-create-container">
    <%= form.submit class: 'btn btn-success' %>
  </div>
<% end %>
